<div class="row ">
  <div class=" ">
    <div class="container">
      <div id="projects">
        <h2 class="projects"> PROJECTS </h2>
        <div class="cards">
          <% data.projects.each_with_index do |project, index| %>
            <%# <% <div class="card-product style= "background-color:<%= data.colors[rand(data.colors.length)].name%>
            <div class="card-product" style= "background-color:<%= data.colors[index % data.colors.size].value%>; color:<%= data.colors[index % data.colors.size].text%>">
              <div class="">
                <h2 class="project-name"><%= project.name %></h2>
                <hr class="css-13irs1z">
                <% link_to project.url, class: 'external-link', target: '_blank' do %>
                  <i class="fas fa-external-link-alt"></i>
                <% end %>
              </div>
              <%= image_tag project.image, alt: "project image" %>
              <div class="card-product-infos w-100">
                <p><%= project.description %></p>
              </div>
              <%# <button type="button" class="click-bt ">CLICK HERE</button> %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
