<div class="row my-5">
  <div class="col-12">
    <div class="container">
      <div id="projects">
        <h2 class="projects"> PROJECTS </h2>
        <div class="cards">
          <% data.projects.each do |project| %>
            <div class="card-product " style= "background-color:<%= data.colors[rand(data.colors.length)].name %>">
              <div class="">
                <h2 class="project-name"><%= project.name %></h2>
                <% link_to project.url, class: 'external-link', target: '_blank' do %>
                  <i class="fas fa-external-link-alt"></i>
                <% end %>
              </div>
              <%= image_tag project.image, alt: "project image" %>
              <div class="card-product-infos w-100">
                <p><%= project.description %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
